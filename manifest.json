{
    "name": "Focus Time",
    "version": "1.0.0",
    "description": "This is a timer built to help you focus while doing homework",
    "author": "Alec Morris",
    "manifest_version": 3,
    "action": {
      "default_icon":{
        "16": "/images/timer.png"
      },
        "default_popup": "index.html",
        "default_title": "Focus Timer"
    },
    "permissions": [ "notifications","tabs" ,"activeTab"],
      "offline_enabled": true,
      "background": {
        "service_worker": "background.js"
      },
      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["script.js"]
        }
      ]
}